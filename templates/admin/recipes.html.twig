{% extends 'base.html.twig' %}

{% block title %}Les recettes sur le site!{% endblock %}

{% block body %}
<div class="container">
    <h1>Les recettes du site</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Crée le</th>
            <th>Mis à jour le</th>
            <th>Temps</th>
            <th>Difficulté</th>
            <th>Cout</th>
            <td>Visible ?</td>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.createdAt|date("d/m/Y") }}</td>
                <td>{{ recipe.updatedAt|date("d/m/Y") }}</td>
                <td>{{ recipe.time }}</td>
                <td>{{ recipe.difficulty.name }}</td>
                <td>{{ recipe.cost.name }}</td>
                <td>{{ recipe.isActive ? 'Oui' : 'Non'}}</td>
                <td>
                    <a href="{{ path('recipe_show', {'recipe': recipe.id}) }}"><button>Voir la fiche</button></a>
                    <a href="{{ path('recipe_edit', {'recipe': recipe.id}) }}"><button>Edition</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune recette trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a href="{{ path('recipe_add') }}">Créer une recette</a>

    </div>

</div>
{% endblock %}
